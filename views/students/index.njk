{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
      <a href="/students/create">Novo</a>
      <table width = 100%>
          <thead>
            <tr>
                <th>Estudante</th>
                <th>Email</th>
                <th>Ano Escolar</th>
                <th>Ação</th>
            </tr>
          </thead>
          <tbody id="students">
            {% for student in students %}
            <tr>
                <td class="students">
                  <span style="background-image: url({{student.avatar_url}})"></span>
                  {{student.name}}
                </td>
                <td class="students">{{student.email}}</td>
                <td><span>{{studentSchool[student.id - 1]}}</span></td>
                <td><a href="/students/{{student.id}}">Ver</a></td>
            </tr>
            {% endfor %}
          </tbody>
      </table>
  </div>

{% endblock content %}
                
                